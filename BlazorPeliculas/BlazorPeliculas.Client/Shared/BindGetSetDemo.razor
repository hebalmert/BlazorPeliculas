<h3>BindGetSetDemo</h3>

<input type="text" @bind:get="texto" @bind:set="LetraMayus" @bind:event="oninput"/>

<p>
    Texto: @texto
</p>

@code {
    private string texto = string.Empty;


    private Task LetraMayus(string valor)
    {
        texto = valor.ToUpper();
        return Task.CompletedTask;
    }
}
